<div class="container">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
            <div id="post-comment">
                <h3>留言</h3>
                <% comments.forEach(function (comment) { %>
                <div class="comment">
                    <span class="avatar">
                        <img src="/img/<%= comment.author.avatar %>">
                    </span>
                    <div class="content">
                        <a class="author" href="/posts?author=<%= comment.author._id %>"><%= comment.author.name %></a>
                        <div class="matadata"><%= comment.created_at %></div>
                        <div class="text"><%- comment.content %></div>
                        <% if (user && comment.author._id && user._id.toString() === comment.author._id.toString()) { %>
                        <div class="actions">
                            <a href="/posts/<%= post._id %>/comment/<%= comment._id %>/remove">删除</a>
                        </div>
                        <% } %>
                    </div>
                </div>
                <% }) %>
                <% if (user) { %>
                <form class="form" id="post-form" role="form" method="post" action="/posts/<%= post._id %>/comment">
                    <textarea class="form-control" name="content" rows="3"></textarea>
                    <input type="submit" class="btn btn-primary" value="留言">
                </form>
                <% } %>
            </div>
        </div>
    </div>
</div>
<hr>