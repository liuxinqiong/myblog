<!-- Page Header -->
<header class="intro-header" style="background-image: url('https://source.unsplash.com/random/')">
    <div class="container">
        <div class="row">
            <div class="col-lg-2 col-md-1 col-sm-1 col-xs-1">
                <% if(user){ %>
                    <div class="avatar-container">
                        <img src="/img/<%= user.avatar %>" class="img-responsive center-block img-circle hidden-print hidden-xs hidden-sm">
                    </div>
                <% } %>
            </div>
            <div class="col-lg-8 col-md-10 col-sm-10 col-xs-10">
                <div class="site-heading">
                    <h1>Better</h1>
                    <% if(user){ %>
                        <span class="subheading">
                            <%= user.bio %>
                        </span>
                    <% }else{ %>
                        <span class="subheading">Ethan的博客，欢迎访问交流</span>
                    <% } %>
                </div>
            </div>
        </div>
