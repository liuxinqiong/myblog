<%- include('header') %>

<div class="container">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
            <form class="form" id="post-form" role="form" method="post" action="/posts">
                <div class="input-group post-input-item">
                    <span class="input-group-addon">标题</span>
                    <input type="text" class="form-control" name="title" placeholder="文章标题">
                </div>
                <div class="input-group post-input-item">
                    <span class="input-group-addon">标签</span>
                    <input type="text" class="form-control" name="tags" placeholder="文章标签">
                </div>
                <div class="input-group post-input-item">
                    <span class="input-group-addon">私有</span>
                    <div class="form-control">
                        <input type="checkbox" name="isPrivate">
                    </div>
                </div>
                <div class="input-group post-input-item">
                    <span class="input-group-addon">内容</span>
                    <textarea class="form-control" name="content" rows="30"></textarea>
                </div>
                <div class="input-group post-input-item submit-btn">
                    <input type="submit" class="btn btn-primary" value="发布">
                </div>
            </form>
        </div>
    </div>
</div>
<hr>

<script src="/src/component/upload.js"></script>
<%- include('footer') %>